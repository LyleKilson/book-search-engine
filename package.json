{
  "name": "book-search-engine",
  "version": "1.0.0",
  "description": "MERN (MongoDB, Express, React, Node) demonstration",
  "main": "server/server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd server && npm start",
    "start:dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "heroku-postbuild": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LyleKilson/book-search-engine.git"
  },
  "keywords": [],
  "author": "Kyle Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LyleKilson/book-search-engine/issues"
  },
  "homepage": "https://github.com/LyleKilson/book-search-engine#readme",
  "devDependencies": {
    "concurrently": "^6.2.0"
  },
  "dependencies": {
    "if-env": "^1.0.4"
  }
}
